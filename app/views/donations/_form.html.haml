= form_for @donation do |f|
  - if @donation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@donation.errors.count, "error")} prohibited this donation from being saved:"
      %ul
        - @donation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :district
    = f.text_field :district
  .field
    = f.label :transaction_id
    = f.text_field :transaction_id
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
