= form_for @donation, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :country, :class => 'control-label'
    .controls
      = f.text_field :country, :class => 'text_field'
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group
    = f.label :district, :class => 'control-label'
    .controls
      = f.text_field :district, :class => 'text_field'
  .control-group
    = f.label :transaction_id, :class => 'control-label'
    .controls
      = f.text_field :transaction_id, :class => 'text_field'
  .control-group
    = f.label :amount, :class => 'control-label'
    .controls
      = f.number_field :amount, :class => 'number_field'
  .control-group
    = f.label :date, :class => 'control-label'
    .controls
      = f.datetime_select :date, :class => 'datetime_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), donations_path, :class => 'btn'
